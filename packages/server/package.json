{
  "name": "@docker-express-env/server",
  "version": "1.0.0",
  "description": "Express server package for Docker Express TypeScript project",  
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=dist/index.js --external:express --external:@types/node",
    "dev": "tsx watch --env-file=.env --inspect src/index.ts",
    "start": "node --env-file=.env dist/index.js"
  },
  "dependencies": {
    "express": "5.0.0"
  },
  "devDependencies": {
    "@types/express": "5.0.0",
    "@types/node": "22.7.9",
    "esbuild": "^0.19.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
