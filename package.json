{
  "name": "docker-express-env",
  "version": "1.0.0",
  "description": "Docker Express TypeScript Workspace Project",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=server",
    "start": "npm run start --workspace=server",
    "clean": "rm -rf dist node_modules packages/*/dist packages/*/node_modules",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
